<div class="search_box">
  <%= form_tag poems_path, name: "search_poem", id: "main_search", method: :get do %>
      <%= select_tag "auhtor", options_from_collection_for_select(Author.all, "id", "name", params[:auhtor]), prompt: "#{t :all}" %>
      <%= submit_tag "#{t :search}", :disable_with => "#{t :please_wait}...", :class => 'btn btn-primary' %>
  <% end %>
</div>



<div class="results_list_div ">
  <% @poems.each do |poem| %>

      <a href="#myModal_<%= poem.id %>" role="button" data-toggle="modal" class="modal-pop-a">
        <div class="box effect5">
          <div class="vachana-concord-box">
            <div class="vachana-show-box">
              <span>  <%= poem.poem_text %> </span>
            </div>
            --------------
            <div class="vachanakaara-name">
       <span  >
         <%= "#{poem.author.name}" %>
       </span>
            </div>
          </div>
        </div>
      </a>

      <div id="myModal_<%= poem.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">
      <span class="vachanakaara-name">
        <%= "#{poem.author.name}" %>
      </span>
          </h3>
        </div>
        <div class="modal-body vachana-pop">
          <p id='fe_text_<%= poem.id %>'> <%= raw poem.poem_text.gsub(/\n/, '<br />') %>

          </p>
        </div>
        <div class="modal-footer">
          <div class='demo-area'>
            <%= link_to("", class: "vachanakaara-icon-link") do %>
                <i class="fa fa-user fa-1x"></i>
            <% end %>
            <button class='btn d_clip_button' data-clipboard-target='fe_text_<%= poem.id %>' data-clipboard-text='Default clipboard text from attribute' id='d_clip_button' title='Click me to copy to clipboard.'>
              <i class="fa fa-files-o fa-1x"></i>
            </button>
          </div>
        </div>
      </div>


  <% end %>
</div>
<%= will_paginate @poems %>
